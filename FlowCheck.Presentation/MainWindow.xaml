<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="FlowCheck.Presentation.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FlowCheck.Presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="FlowCheck">

    <Grid Background="{StaticResource Cinza12}">
        
        <Grid.RowDefinitions>
            <RowDefinition Height="45"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <Border Background="{StaticResource Cinza12}" Padding="0" Margin="0">
            
            <StackPanel Padding="20,0" Margin="0" Spacing="8">
                <Grid Padding="0" VerticalAlignment="Center" HorizontalAlignment="Stretch" Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" HorizontalAlignment="Left" Margin="0" Padding="0" Text="Tarefas" Foreground="{StaticResource Cinza3}"/>
                    <TextBlock Grid.Column="1" HorizontalAlignment="Right"  Margin="0" Padding="0" Text="" Foreground="{StaticResource Cinza3}"/>

                </Grid>
                <Border Grid.Row="1" Height="1" VerticalAlignment="Top" HorizontalAlignment="Stretch" Background="{StaticResource Cinza8}"/>
            </StackPanel>
            
        </Border>

        <Frame x:Name="MainFrame" Grid.Row="1"/>

        <Border Background="{StaticResource Cinza11}" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Height="60" Grid.Row="2" >

            <Grid Margin="20,0" VerticalAlignment="Center" ColumnSpacing="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="120"/>
                </Grid.ColumnDefinitions>

                <StackPanel  Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left">
                    <Border Width="24" Height="24" HorizontalAlignment="Left" VerticalAlignment="Center">
                        <CheckBox x:Name="chkTodos" Checked="chkTodos_Checked" Unchecked="chkTodos_Checked" Grid.Column="0"/>
                    </Border>

                    <Button x:Name="btnExcluirTudo" 
                            Click="btnExcluirTudo_Click"
                            Grid.Column="1"
                            Padding="0"
                            Width="32"
                            Height="32"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Left"
                            Style="{StaticResource AlternateCloseButtonStyle}">
                        <FontIcon Glyph="&#xE74D;" FontFamily="Segoe Fluent Icons" FontWeight="Normal" FontSize="18"/>
                    </Button>

                    <Button x:Name="btnArquivarTudo" 
                            Click="btnArquivarTudo_Click"
                            Grid.Column="2"
                            Width="32"
                            Height="32"
                            Padding="0"
                            Visibility="Collapsed"
                            IsEnabled="False"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Left"
                            Style="{StaticResource AlternateCloseButtonStyle}">
                        <FontIcon Glyph="&#xF158;" FontFamily="Segoe Fluent Icons" FontWeight="Normal" FontSize="18"/>
                    </Button>
                </StackPanel>
                
                <Button x:Name="btnAdicionar" 
                        Click="btnAdicionar_Click"
                        Grid.Column="1"
                        Padding="0" 
                        Width="32" 
                        Height="32" 
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Style="{StaticResource AccentButtonStyle}">
                    <FontIcon Glyph="&#xE710;" FontFamily="Segoe Fluent Icons" FontSize="18"/>
                </Button>

                <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="btnTarefa" 
                        Grid.Column="4"
                        Click="BtnTarefas_Click" 
                        HorizontalAlignment="Right" 
                        Style="{StaticResource AlternateCloseButtonStyle}">
                        <Image Source="Assets/Tarefa-icone-48.png"  Width="32" Height="32"/>
                    </Button>

                    <Button x:Name="btnAnotacao" 
                        Grid.Column="5"
                        Click="BtnAnotacoes_Click" 
                        HorizontalAlignment="Right" 
                        Style="{StaticResource AlternateCloseButtonStyle}">
                        <Image Source="Assets/Anotacao-icone-48.png" Width="32" Height="32"/>
                    </Button>
                </StackPanel>
                
            </Grid>
        </Border>
    </Grid>
</Window>